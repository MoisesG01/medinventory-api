generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserType {
  Administrador
  Gestor
  Tecnico
  UsuarioComum
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  email     String   @unique
  nome      String
  tipo      UserType @default(UsuarioComum)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
